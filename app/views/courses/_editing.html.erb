<%= form_with model: courses, html:{multipart: true} do |form| %>

  <% if courses.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(course.errors.count, "error") %> prohibited this reservation from being saved:</h2>

        <ul>
        <% course.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  <!-- <h1>Add New Course</h1> -->
  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image, id: :course_image %>
  </div>
  <div class="field">
    <%= form.label 'Class Name:'%>
    <%= form.text_field :name, id: :course_name %>
  </div>
  <div class="field">
    <%= form.label 'Description of class' %>
    <%= form.text_area :description, id: :course_description %>
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_area :address, id: :course_address %>
  </div>
  <div class="field">
    <%= form.label :address2 %>
    <%= form.text_area :address2, id: :course_address2 %>
  </div>
  <div class="field">
    <%= form.label :city %>
    <%= form.text_area :city, id: :course_city %>
  </div>
  <div class="field">
    <%= form.label :state %>
    <%= form.text_area :state, id: :course_state %>
  </div>
  <div class="field">
    <%= form.label :zip %>
    <%= form.text_area :zip, id: :course_zip %>
  </div>

  <div class="field">
    <%= form.label 'Price' %>
    <%= form.text_area :price, id: :course_price %>
  </div>

  <div class="container">
    <div class="row">
        <div class='col-sm-6'>
            <div class="form-group">
                <div class='input-group date' id='datetimepicker1'>
                        <input type='text' class="form-control" name="course[date]"/>
                        <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
        </div>
        <script type="text/javascript">
            $(function () {
                $('#datetimepicker1').datetimepicker();
            });
        </script>
    </div>
</div>
