      <%= form.text_field :instructor_id %>
    </div>
  <% else %>
   <%= form.hidden_field :instructor_id, value: @instructor.id %>
  <% end %> -->

  <hr>
  <div class="actions">
    <%= form.submit "Update Class" %>
  </div>

  <div class="actions"> <%= link_to 'Remove', @course, method: :delete, data: { confirm: 'Are you sure?' } %></div>

  <hr>
<% end %>
